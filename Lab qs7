//Write a program to search a given number in an array

#include <stdio.h>

int main() {
    int n, i, num, found = 0;
    int arr[100];

    printf("Enter how many numbers: ");
    scanf("%d", &n);

    printf("Enter numbers: ");
    for(i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }

    printf("Enter number to search: ");
    scanf("%d", &num);

    for(i = 0; i < n; i++) {
        if(arr[i] == num) {
            found = 1;
            break;
        }
    }

    if(found == 1)
        printf("Number found at position %d\n", i + 1);
    else
        printf("Number not found\n");

    return 0;
}
